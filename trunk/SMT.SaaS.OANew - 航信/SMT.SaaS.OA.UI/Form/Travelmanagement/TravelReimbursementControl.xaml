                            TextWrapping="Wrap"
                            VerticalAlignment="Top"
                            Margin="5,5,0,4"
                            d:LayoutOverrides="Width" Width="100" />
                <!--费用报销控件显示开关-->
				<CheckBox Grid.Row="10" Grid.Column="1" x:Name="fbChkBox" Checked="fbChkBox_Checked" Unchecked="fbChkBox_Unchecked"
					Height="23" Margin="5,5,0,4" VerticalAlignment="Center" />
                <!--费用报销控件显示开关结束-->
                <!--预算控件-->
                <Grid Grid.Row="11"
                        Grid.Column="1"
                        Margin="0,5,20,2"
                        Grid.ColumnSpan="3"
                        x:Name="scvFB"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        Visibility="Collapsed">
                    <fbctr:ChargeApplyControl  x:Name="fbCtr" Margin="5,1,0,4"/>
                </Grid>
                <!--预算控件结束-->

                <!--报销费用总计-->
                <TextBlock Grid.Row="12" Grid.Column="1"
                            Text="{Binding Converter={StaticResource ResourceConveter}, Source=TOTALCOSTOFTRAVELREIMBURSEMENT}"
                            RenderTransformOrigin="0.704,2.895"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Stretch" Height="20"/>
                <TextBox x:Name="txtChargeApplyTotal"
							Grid.Row="12"
                            Grid.Column="1"
                            IsReadOnly="True"
                            Style="{StaticResource TextBoxStyle}"
							HorizontalAlignment="Left"
							Margin="125,1,20,4"
                            Height="25" Width="100" />
                <!--报销费用总计结束-->

                <!--隐藏控件：可用额度-->
                <TextBlock Grid.Row="12"
                                Grid.Column="1"
                                Text="{Binding Converter={StaticResource ResourceConveter}, Source=AVAILABLECREDIT}"
                                RenderTransformOrigin="0.704,2.895"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Stretch" Height="20" Margin="25,0,0,0" Visibility="Collapsed"/>
                <TextBox x:Name="txtAvailableCredit"
                                Margin="125,1,20,4"
								Grid.Row="12"
                                Grid.Column="1"
                                IsReadOnly="True"
                                Style="{StaticResource TextBoxStyle}"
								HorizontalAlignment="Left"
                                Height="25" Width="100" Visibility="Collapsed" />
                <!--隐藏控件：可用额度结束-->
            </Grid>
        </Grid>
    </Grid>
</smtLocal:BaseForm>
