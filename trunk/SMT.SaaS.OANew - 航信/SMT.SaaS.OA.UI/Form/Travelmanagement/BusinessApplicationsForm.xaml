                <Grid Margin="4,0,0,0" x:Name="TravelapplicationGd">
                </Grid>
            <!--</ScrollViewer>-->
        </controls:TabItem>

        <controls:TabItem x:Name="TabReport" Header="{Binding Converter={StaticResource ResourceConveter}, Source=TRIPREPORT}" Visibility="Collapsed" Style="{StaticResource TabItemStyle}">
            <!--<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Style="{StaticResource ScrollViewerStyle}">-->
                <Grid Margin="4,0,0,0" x:Name="ReportGd">
                </Grid>
            <!--</ScrollViewer>-->
        </controls:TabItem>

        <controls:TabItem Header="出差报销" x:Name="traveformFather" Style="{StaticResource TabItemStyle}">
            <!--<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Style="{StaticResource ScrollViewerStyle}">-->
                <Grid Margin="4,0,0,0" x:Name="TravelReimbursementGd">
                </Grid>
            <!--</ScrollViewer>-->
        </controls:TabItem>
    </controls:TabControl>
</smtLocal:BaseForm>
