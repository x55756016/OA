<smtLocal:BaseForm xmlns:smtLocal="clr-namespace:SMT.SaaS.OA.UI"  x:Class="SMT.SaaS.OA.UI.UserControls.AddOrderMealRemark"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="240"/>            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        
        <TextBlock x:Name="tblTitle" Margin="8,5,66,3" Grid.Column="1" Grid.ColumnSpan="2" TextWrapping="Wrap" />
        <TextBlock Margin="8,0,8,85" Grid.Row="1" Text="{Binding Converter={StaticResource ResourceConveter}, Source=CONFIRMINFO}" TextWrapping="Wrap"/>
        <TextBox x:Name="txtRemark" Margin="4" Width="200" Height="80" AcceptsReturn="True" HorizontalAlignment="left" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top"/>
    </Grid>
</smtLocal:BaseForm>
