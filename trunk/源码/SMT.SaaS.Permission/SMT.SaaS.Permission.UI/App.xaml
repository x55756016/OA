<Application xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit" 	
             x:Class="SMT.SaaS.Permission.UI.App"               
             xmlns:input="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input"
             xmlns:app="clr-namespace:SMT.SaaS.Permission.UI"
             xmlns:primitives="clr-namespace:System.Windows.Controls.Primitives;assembly=System.Windows.Controls.Data"
             xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:vsm="clr-namespace:System.Windows;assembly=System.Windows"
             xmlns:dataInput="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data.Input" 
             xmlns:global="clr-namespace:SMT.SaaS.Globalization;assembly=SMT.SaaS.Globalization"
             xmlns:dataPrimitives="clr-namespace:System.Windows.Controls.Primitives;assembly=System.Windows.Controls.Data"
             >
    <Application.Resources>
        <ResourceDictionary>
            <!--<ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SMT.SAAS.Themes;component/ControlTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>-->
            <Style TargetType="Button">
                <Setter Property="FontFamily" Value="Arial,SimSun"></Setter>
                <Setter Property="FontSize" Value="12"></Setter>
            </Style>
            <Style TargetType="HyperlinkButton">
                <Setter Property="FontFamily" Value="Arial,SimSun"></Setter>
                <Setter Property="FontSize" Value="12"></Setter>
            </Style>
            <Style TargetType="CheckBox">
                <Setter Property="FontFamily" Value="Arial,SimSun"></Setter>
                <Setter Property="FontSize" Value="12"></Setter>
            </Style>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Arial,SimSun"></Setter>
                <Setter Property="FontSize" Value="12"></Setter>
                <Setter Property="TextTrimming" Value="WordEllipsis"></Setter>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="FontFamily" Value="Arial,SimSun"></Setter>
                <Setter Property="FontSize" Value="12"></Setter>
                <Setter Property="SelectionBackground" Value="#3399ff"/>
                <Setter Property="SelectionForeground" Value="#FFFFFF"/>
            </Style>
            <Style TargetType="primitives:DataGridColumnHeader"  x:Key="DataGridCheckBoxColumnHeaderStyle">
                <Setter Property="ContentTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <CheckBox Margin="2,2,0,0"  Padding="0" Click="CheckBox_Click"></CheckBox>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <!--<Style TargetType="primitives:DataGridColumnHeader"  x:Key="DataGridCheckBoxColumnHeaderStyle2">
                <Setter Property="Template" Value="{StaticResource DataGridColoumnHeaderStyleTemplate}"></Setter>
                <Setter Property="ContentTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <CheckBox Margin="2,2,0,0"  Padding="0" Style="{StaticResource CheckBoxStyle}" x:Name="CheckBoxS" Click="CheckBoxS_Click"></CheckBox>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>-->
            
        </ResourceDictionary>
        
        <!--<app:ApplicationResources x:Key="Localization"></app:ApplicationResources>
        <app:DictionaryConverter x:Key="DictionaryConverter"></app:DictionaryConverter>
        <app:BoolenConverter x:Key="BoolenConverter"></app:BoolenConverter>
        <app:DescriptionViewerConverter x:Key="DescriptionViewerConverter"></app:DescriptionViewerConverter>
        <app:CompanyInfoConverter x:Key="CompanyConvert" />-->
        
    </Application.Resources>
    
    
</Application>
