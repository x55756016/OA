                              Width="54"
                              Style="{StaticResource ComboBoxStyleNoColor}"
                              FontSize="14"
                              HorizontalAlignment="Right"
                              Margin="0,0,7,0"
                              Grid.Column="1"
                              Height="22"
                              VerticalAlignment="Bottom">
                        <ComboBoxItem Content="8"
