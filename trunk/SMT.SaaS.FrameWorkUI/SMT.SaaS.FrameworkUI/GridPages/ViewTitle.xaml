<UserControl x:Class="SMT.SaaS.FrameworkUI.ViewTitle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SMT.SAAS.Themes;component/ControlTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border Style="{StaticResource windowtitleStyle}" Width="auto" x:Name="BorderViewTitle">
        <TextBlock x:Name="titlename"  FontWeight="Bold" Margin="17,6,1,0"></TextBlock>
    </Border>
</UserControl>
