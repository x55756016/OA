<Button x:Class="SMT.SaaS.FrameworkUI.ImageButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="auto" Style="{StaticResource ButtonToolBarStyle}" Foreground="{StaticResource TextBBlue1}" Height="26">
        <StackPanel  Orientation="Horizontal">
            <Image x:Name="image" Width="16" Height="16" Stretch="Fill"/>
            <TextBlock x:Name="textBlock" Margin="3,0,0,0"  Foreground="{StaticResource TextBBlue1}" VerticalAlignment="Center"/>
        </StackPanel>
</Button>
