<smtLocal:BaseForm 
 xmlns:smtLocal="clr-namespace:SMT.SaaS.OA.UI"  
 x:Class="SMT.SaaS.OA.UI.UserControls.TravelReimbursementControl"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 mc:Ignorable="d"
 xmlns:appCtr="clr-namespace:SMT.SaaS.OA.UI.Class"
 xmlns:smt="clr-namespace:SMT.SaaS.FrameworkUI;assembly=SMT.SaaS.FrameworkUI"
 xmlns:smtx="clr-namespace:SMT.SaaS.FrameworkUI;assembly=SMT.SaaS.FrameworkUI"
 xmlns:dataFormToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data.DataForm.Toolkit"
 xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
 xmlns:fbctr="clr-namespace:SMT.SaaS.FrameworkUI.FBControls;assembly=SMT.SaaS.FrameworkUI"
 xmlns:audit="clr-namespace:SMT.SaaS.FrameworkUI.AuditControl;assembly=SMT.SaaS.FrameworkUI"
 xmlns:validator="clr-namespace:SMT.SaaS.FrameworkUI.Validator;assembly=SMT.SaaS.FrameworkUI"
 xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
 xmlns:UserControls="clr-namespace:SMT.SaaS.OA.UI.UserControls"
 xmlns:behaviors="clr-namespace:SMT.SAAS.Behaviors;assembly=SMT.SAAS.Behaviors" 
 xmlns:interaction="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
 xmlns:inputToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit" 
 xmlns:sdk="clr-namespace:System.Windows.Controls.Primitives;assembly=System.Windows.Controls.Data"
 xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
    xmlns:my="clr-namespace:SMT.FileUpLoad;assembly=SMT.FileUpLoad">
    <UserControl.Resources>

    </UserControl.Resources>
    
    <Grid x:Name="PARENT">
        <Grid Margin="4" x:Name="LayoutRoot"  Loaded="LayoutRoot_Loaded">
              <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
					<RowDefinition Height="auto" />
					<RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="0.3*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="0.3*" />
                </Grid.ColumnDefinitions>
                <validator:ValidatorManager x:Name="Group1"></validator:ValidatorManager>
			   
			   <TextBlock HorizontalAlignment="Left"
                                       Grid.Row="2"
                                       Grid.Column="0"
                                       Text="{Binding Converter={StaticResource ResourceConveter}, Source=REPORT}"
                                       TextWrapping="Wrap"
                                       Height="22" Margin="5,1,0,4"/><!--报告内容-->
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtReport" Grid.ColumnSpan="3" AcceptsReturn="True" Text="{Binding CONTENT,Mode=TwoWay}" VerticalScrollBarVisibility="Disabled"
						 TextWrapping="Wrap" Height="auto" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="715" Style="{StaticResource TextBoxStyle}"
                         ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="5,1,20,4"><!--报告内容-->
                            <validator:ValidatorService.Validator>
                                <validator:RequiredValidator ManagerName="Group1" ErrorMessage="REQUIRED" ErrorMessageParameter="REPORT"/>
                            </validator:ValidatorService.Validator>
                            <interaction:Interaction.Behaviors>
                                <behaviors:ShowRequire></behaviors:ShowRequire>
                            </interaction:Interaction.Behaviors>
                        </TextBox>
			   
				<TextBlock HorizontalAlignment="Left"
                            Grid.Row="4" 
                            Grid.Column="0"
                            Text="{Binding Converter={StaticResource ResourceConveter}, Source=TRAVELDETAILS}"
                            TextWrapping="Wrap"
                            Height="22"
                            VerticalAlignment="Top" Margin="5,1,0,4" /><!--差旅明细-->
				<smtx:FormToolBar x:Name="FormToolBar1" Background="Transparent" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Margin="5,1,20,4" VerticalAlignment="Top"></smtx:FormToolBar>
                   
				
                <ScrollViewer x:Name="ShowAudits"  HorizontalAlignment="Stretch" VerticalAlignment="Top" 
                                Grid.Row="4" Grid.ColumnSpan="3" Grid.Column="1" Margin="5,1,20,4" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                    <data:DataGrid x:Name="DaGrs" AutoGenerateColumns="False" Grid.Row="4" Grid.Column="1" LoadingRow="DaGrs_LoadingRow" 
				SelectionMode="Single" Style="{StaticResource DataGridStyle}" CanUserSortColumns="False"
                CellStyle="{StaticResource DataGridCellStyle}" RowStyle="{StaticResource DataGridRowStyle}" 
                RowHeaderStyle="{StaticResource DataGridRowHeaderStyle}" 
                ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}" >
                        <data:DataGrid.Columns>
                            <data:DataGridTemplateColumn Header="DEPARTURETIME" HeaderStyle="{StaticResource DataGridColumnHeaderStyle}" >
                                <data:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <smtx:DateTimePicker Grid.Row="2" Grid.Column="1" x:Name="StartTime" Value="{Binding STARTDATE,Mode=TwoWay,Converter={StaticResource CustomDateConverter},ConverterParameter=DATETIME}" Height="25" Width="auto" OnValueChanged="StartTime_OnValueChanged"></smtx:DateTimePicker>
                                        </StackPanel>
                                    </DataTemplate>
                                </data:DataGridTemplateColumn.CellTemplate>
                            </data:DataGridTemplateColumn>
                            <data:DataGridTemplateColumn Header="DEPARTURECITY" HeaderStyle="{StaticResource DataGridColumnHeaderStyle}" >
                                <data:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <smt:SearchCity Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" MaxWidth="150" DisplayMemberPath="DEPCITY" SelectClick="txtDEPARTURECITY_SelectClick"  KeyDown="TextBox_KeyDown"  x:Name="txtDEPARTURECITY"></smt:SearchCity>
                                        </StackPanel>
                                    </DataTemplate>
                                </data:DataGridTemplateColumn.CellTemplate>
                            </data:DataGridTemplateColumn>
                            <data:DataGridTemplateColumn Header="ARRIVALTIME" HeaderStyle="{StaticResource DataGridColumnHeaderStyle}" >
                                <data:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <smtx:DateTimePicker Grid.Row="3" Grid.Column="1" x:Name="EndTime" Value="{Binding ENDDATE,Mode=TwoWay,Converter={StaticResource CustomDateConverter},ConverterParameter=DATETIME}" Height="25" Width="auto" OnValueChanged="EndTime_OnValueChanged"></smtx:DateTimePicker>
                                        </StackPanel>
                                    </DataTemplate>
                                </data:DataGridTemplateColumn.CellTemplate>
                            </data:DataGridTemplateColumn>
                            <data:DataGridTemplateColumn Header="ARRIVALCITY" HeaderStyle="{StaticResource DataGridColumnHeaderStyle}" >
                                <data:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <smt:SearchCity Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" MaxWidth="100" DisplayMemberPath="DESTCITY" SelectClick="txtTARGETCITIES_SelectClick"  KeyDown="TextBox_KeyDown" x:Name="txtTARGETCITIES"></smt:SearchCity>
                                        </StackPanel>
                                    </DataTemplate>
                                </data:DataGridTemplateColumn.CellTemplate>
                            </data:DataGridTemplateColumn>
                            <data:DataGridTemplateColumn Header="BUSINESSDAYS" HeaderStyle="{StaticResource DataGridColumnHeaderStyle}" >
                                <data:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <TextBox  Grid.Row="3" Grid.Column="1" x:Name="txtTOTALDAYS" Text="{Binding BUSINESSDAYS,Mode=TwoWay}" TextWrapping="NoWrap" Height="25" IsReadOnly="True" MaxLength="25" Width="50" KeyDown="TextBox_KeyDown">          
                                            </TextBox>
                                        </StackPanel>
                                    </DataTemplate>
                                </data:DataGridTemplateColumn.CellTemplate>
                            </data:DataGridTemplateColumn>
                            <data:DataGridTemplateColumn Header="THENUMBEROFNIGHTS" HeaderStyle="{StaticResource DataGridColumnHeaderStyle}" Visibility="Collapsed">
                                <data:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <TextBox x:Name="txtTHENUMBEROFNIGHTS" TextWrapping="NoWrap" Height="25" Text="{Binding THENUMBEROFNIGHTS,Mode=TwoWay}" 
											Style="{StaticResource TextBoxStyle}" MaxLength="25" Width="40" KeyDown="TextBox_KeyDown">
                                            </TextBox>
                                        </StackPanel>
                                    </DataTemplate>
                                </data:DataGridTemplateColumn.CellTemplate>
                            </data:DataGridTemplateColumn>
                            <data:DataGridTemplateColumn Header="TYPEOFTRAVELTOOLS" HeaderStyle="{StaticResource DataGridColumnHeaderStyle}" >
                                <data:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                                <appCtr:TravelDictionaryComboBox x:Name="ComVechileType"
                                                            Category="VICHILESTANDARD"
                                                            SelectedValue="{Binding TYPEOFTRAVELTOOLS,Mode=TwoWay,NotifyOnValidationError=true, ValidatesOnExceptions=true}"
                                                            Style="{StaticResource ComboBoxStyle}"
                                                            SelectionChanged="ComVechileType_SelectionChanged"
                                                            MinWidth="50"
                                                            MaxWidth="80"
                                                            Height="24"
                                                            HorizontalAlignment="Stretch"
                                                            VerticalAlignment="Stretch"
                                                            Margin="2"></appCtr:TravelDictionaryComboBox>
                                            <!--<TextBox Grid.Row="5" Grid.Column="1" x:Name="txtTYPEOFTRAVELTOOLS" TextWrapping="NoWrap" Height="25" Style="{StaticResource TextBoxStyle}" MaxLength="25" Width="100" KeyDown="TextBox_KeyDown">
                                                <validator:ValidatorService.Validator>
                                                    <validator:RequiredValidator ManagerName="Group1"
                                                        ErrorMessage="REQUIRED"
                                                        ErrorMessageParameter="TYPEOFTRAVELTOOLS" />
                                                </validator:ValidatorService.Validator>
                                            </TextBox>-->
                                        </StackPanel>
                                    </DataTemplate>
                                </data:DataGridTemplateColumn.CellTemplate>
                            </data:DataGridTemplateColumn>
                            <data:DataGridTemplateColumn Header="GRADE" HeaderStyle="{StaticResource DataGridColumnHeaderStyle}" >
                                <data:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                                <appCtr:TravelDictionaryComboBox x:Name="ComVechileTypeLeve"
                                                            Category="VICHILELEVEL"
                                                            SelectedValue="{Binding TAKETHETOOLLEVEL,Mode=TwoWay,NotifyOnValidationError=true, ValidatesOnExceptions=true}"
                                                            Style="{StaticResource ComboBoxStyle}" SelectionChanged="ComVechileTypeLeve_SelectionChanged"
                                                            Grid.Row="2"
                                                            Grid.Column="1"
                                                            MinWidth="50"
                                                            MaxWidth="80"
                                                            Height="24"
                                                            HorizontalAlignment="Stretch"
                                                            VerticalAlignment="Stretch"
                                                            Margin="2"></appCtr:TravelDictionaryComboBox>
                                            <!--<TextBox Grid.Row="5" Grid.Column="3" x:Name="txtTAKETHETOOLLEVEL" TextWrapping="NoWrap" Height="25" Style="{StaticResource TextBoxStyle}" MaxLength="25" Width="100" KeyDown="TextBox_KeyDown">
                                                <validator:ValidatorService.Validator>
                                                    <validator:RequiredValidator ManagerName="Group1"
                                                        ErrorMessage="REQUIRED"
                                                        ErrorMessageParameter="TAKETHETOOLLEVEL" />
                                                </validator:ValidatorService.Validator>
                                            </TextBox>-->
                                        </StackPanel>
                                    </DataTemplate>
                                </data:DataGridTemplateColumn.CellTemplate>
                            </data:DataGridTemplateColumn>
                            <data:DataGridTemplateColumn Header="TRAVELEXPENSES" HeaderStyle="{StaticResource DataGridColumnHeaderStyle}" >
                                <data:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <TextBox Grid.Row="6" Grid.Column="1" x:Name="txtTRANSPORTCOSTS" Text="{Binding TRANSPORTCOSTS, Mode=TwoWay}" TextWrapping="NoWrap" Height="25" Style="{StaticResource TextBoxStyle}" MaxLength="25" Width="50" KeyDown="TextBox_KeyDown" LostFocus="txtTRANSPORTCOSTS_LostFocus">
                                                <validator:ValidatorService.Validator>
                                                    <validator:RegexValidator ManagerName="Group1" ErrorMessage="FORMATERRORS" ErrorMessageParameter="TRAVELEXPENSES"
				                                            Expression="^[0-9]+(.[0-9]{1,3})?$"></validator:RegexValidator>
                                                </validator:ValidatorService.Validator>
                                            </TextBox>
                                        </StackPanel>
                                    </DataTemplate>
                                </data:DataGridTemplateColumn.CellTemplate>
                            </data:DataGridTemplateColumn>
                            <data:DataGridTemplateColumn Header="ACCOMMODATION" HeaderStyle="{StaticResource DataGridColumnHeaderStyle}" >
                                <data:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <TextBox Grid.Row="6" Grid.Column="1" x:Name="txtACCOMMODATION" TextWrapping="NoWrap" Text="" Height="25" LostFocus="txtACCOMMODATION_LostFocus" Style="{StaticResource TextBoxStyle}" MaxLength="25" Width="50" KeyDown="TextBox_KeyDown">
                                                <validator:ValidatorService.Validator>
                                                    <validator:RegexValidator ManagerName="Group1" ErrorMessage="FORMATERRORS" ErrorMessageParameter="ACCOMMODATION"
				                                            Expression="^[0-9]+(.[0-9]{1,3})?$"></validator:RegexValidator>
                                                </validator:ValidatorService.Validator>
                                            </TextBox>
                                        </StackPanel>
                                    </DataTemplate>
                                </data:DataGridTemplateColumn.CellTemplate>
                            </data:DataGridTemplateColumn>
                            <data:DataGridTemplateColumn Header="LOCALTRANSPORTATIONSUBSIDIES" HeaderStyle="{StaticResource DataGridColumnHeaderStyle}" ><!--交通补贴-->
                                <data:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <TextBox Grid.Row="6" Grid.Column="3" x:Name="txtTRANSPORTATIONSUBSIDIES" Text="" TextWrapping="NoWrap" IsReadOnly="True" Height="25" Style="{StaticResource TextBoxStyle}" MaxLength="25" Width="80" KeyDown="TextBox_KeyDown">
                                                <validator:ValidatorService.Validator>
                                                    <validator:RegexValidator ManagerName="Group1" ErrorMessage="FORMATERRORS" ErrorMessageParameter="LOCALTRANSPORTATIONSUBSIDIES"
				                                            Expression="^[0-9]+(.[0-9]{1,3})?$"></validator:RegexValidator>
                                                </validator:ValidatorService.Validator>
                                            </TextBox>
                                        </StackPanel>
                                    </DataTemplate>
                                </data:DataGridTemplateColumn.CellTemplate>
                            </data:DataGridTemplateColumn>
                            <data:DataGridTemplateColumn Header="MEALSUBSIDIES" HeaderStyle="{StaticResource DataGridColumnHeaderStyle}" ><!--餐费补贴-->
                                <data:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <TextBox Grid.Row="6" Grid.Column="3" x:Name="txtMEALSUBSIDIES" Text="" TextWrapping="NoWrap" IsReadOnly="True" Height="25" Style="{StaticResource TextBoxStyle}" MaxLength="25" Width="60" KeyDown="TextBox_KeyDown">
                                                <validator:ValidatorService.Validator>
                                                    <validator:RegexValidator ManagerName="Group1" ErrorMessage="FORMATERRORS" ErrorMessageParameter="MEALSUBSIDIES"
				                                            Expression="^[0-9]+(.[0-9]{1,3})?$"></validator:RegexValidator>
                                                </validator:ValidatorService.Validator>
                                            </TextBox>
                                        </StackPanel>
                                    </DataTemplate>
                                </data:DataGridTemplateColumn.CellTemplate>
                            </data:DataGridTemplateColumn>
                            <data:DataGridTemplateColumn Header="OTHERCOST" HeaderStyle="{StaticResource DataGridColumnHeaderStyle}" >
                                <data:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <TextBox Grid.Row="6" Grid.Column="3" x:Name="txtOtherCosts" Text="{Binding OTHERCOSTS, Mode=TwoWay}" TextWrapping="NoWrap" Height="25" Style="{StaticResource TextBoxStyle}" MaxLength="25" Width="60" KeyDown="TextBox_KeyDown" LostFocus="txtOtherCosts_LostFocus">
                                                <validator:ValidatorService.Validator>
                                                    <validator:RegexValidator ManagerName="Group1" ErrorMessage="FORMATERRORS" ErrorMessageParameter="OTHERCOST"
				                                            Expression="^[0-9]+(.[0-9]{1,3})?$"></validator:RegexValidator>
                                                </validator:ValidatorService.Validator>
                                            </TextBox>
                                        </StackPanel>
                                    </DataTemplate>
                                </data:DataGridTemplateColumn.CellTemplate>
                            </data:DataGridTemplateColumn>
                            <data:DataGridTemplateColumn Header="PRIVATEAFFAIR" HeaderStyle="{StaticResource DataGridColumnHeaderStyle}" >
                                <data:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <CheckBox x:Name="myChkBox" Checked="myChkBox_Checked" Unchecked="myChkBox_Unchecked" Tag="{Binding PRIVATEAFFAIR}" Height="23" MaxWidth="20" Margin="0,6,0,0" VerticalAlignment="Center" 
                                                      Click="myChkBox_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </data:DataGridTemplateColumn.CellTemplate>
                            </data:DataGridTemplateColumn>
                            <data:DataGridTemplateColumn Header="GOOUTTOMEET" HeaderStyle="{StaticResource DataGridColumnHeaderStyle}" >
                                <data:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <CheckBox x:Name="myChkBoxMeet" Checked="myChkBoxMeet_Checked" Unchecked="myChkBoxMeet_Unchecked" ToolTipService.ToolTip="勾选后无交通及餐费补贴" Tag="{Binding GOOUTTOMEET}" Height="23" MaxWidth="20" Margin="0,6,0,0" VerticalAlignment="Center" 
                                                      Click="myChkBoxMeet_Click" />
                                        </StackPanel>
                                    </DataTemplate>
                                </data:DataGridTemplateColumn.CellTemplate>
                            </data:DataGridTemplateColumn>
                            <data:DataGridTemplateColumn Header="COMPANYCAR" Width="60" HeaderStyle="{StaticResource DataGridColumnHeaderStyle}" >
                                <data:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <CheckBox x:Name="myChkBoxCar" Checked="myChkBoxCar_Checked" Unchecked="myChkBoxCar_Unchecked" ToolTipService.ToolTip="勾选后无交通补贴" Tag="{Binding GOOUTTOMEET}" Height="23" Margin="0,6,0,0" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </DataTemplate>
                                </data:DataGridTemplateColumn.CellTemplate>
                            </data:DataGridTemplateColumn>
                            <data:DataGridTemplateColumn Header="OPERATION" x:Name="Operation" HeaderStyle="{StaticResource DataGridColumnHeaderStyle}">
                                <data:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <smtx:ImageButton x:Name="myDelete"  Click="Delete_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </data:DataGridTemplateColumn.CellTemplate>
                            </data:DataGridTemplateColumn>
                        </data:DataGrid.Columns>
                    </data:DataGrid>
                </ScrollViewer>
                            
				<!--查看或审核时不显示控件只读取数据-->
		        <ScrollViewer x:Name="tbShowAudits"  HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="4" Grid.ColumnSpan="3" 
                                  Grid.Column="1" Margin="5,1,20,4" ScrollViewer.VerticalScrollBarVisibility="Hidden" Width="auto" Visibility="Collapsed">
		        <data:DataGrid x:Name="DaGrss" AutoGenerateColumns="False" Grid.Row="2" Grid.Column="1"  LoadingRow="DaGrss_LoadingRow" 
				                  Style="{StaticResource DataGridStyle}" CanUserSortColumns="False" IsReadOnly="True"
								  RowStyle="{StaticResource DataGridRowStyle}"
                                CellStyle="{StaticResource DataGridCellStyle}" 
                                RowHeaderStyle="{StaticResource DataGridRowHeaderStyle}"
                                ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
								 RenderTransformOrigin="0.5,0.5"
								 HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                <data:DataGrid.Columns>
                    <data:DataGridTemplateColumn Header="DEPARTURETIME"><!--出发时间-->
                    	<data:DataGridTemplateColumn.HeaderStyle>
                                        <Style TargetType="sdk:DataGridColumnHeader">
                                        <Setter Property="Template" Value="{StaticResource DataGridColoumnHeaderStyleTemplate}"></Setter>
                                        <Setter Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <TextBlock  Text="{Binding Converter={StaticResource ResourceConveter}, Source=DEPARTURETIME}" 
                                                           Foreground="{StaticResource HeaderBackgroundfontColor1}" x:Name="ContentFontColor"
                                                           TextTrimming="None" TextAlignment="Center" TextWrapping="Wrap" Width="63">
                                                    </TextBlock>
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        </Style>
                         </data:DataGridTemplateColumn.HeaderStyle>
                        <data:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                              <TextBlock x:Name="tbStartTime" Text="{Binding STARTDATE,Mode=TwoWay,Converter={StaticResource CustomDateConverter},ConverterParameter=DATETIME}"
                                         Width="63"  TextTrimming="None" TextAlignment="Center" TextWrapping="Wrap" ></TextBlock>
                            </StackPanel>
							</DataTemplate>
                        </data:DataGridTemplateColumn.CellTemplate>
                    </data:DataGridTemplateColumn>
                    <data:DataGridTemplateColumn Header="DEPARTURECITY"><!--出发城市-->
                    	<data:DataGridTemplateColumn.HeaderStyle>
                                        <Style TargetType="sdk:DataGridColumnHeader">
                                        <Setter Property="Template" Value="{StaticResource DataGridColoumnHeaderStyleTemplate}"></Setter>
                                        <Setter Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <TextBlock  Text="{Binding Converter={StaticResource ResourceConveter}, Source=DEPARTURECITY}" 
                                                           Foreground="{StaticResource HeaderBackgroundfontColor1}" x:Name="ContentFontColor"
                                                           TextTrimming="None" TextAlignment="Center" TextWrapping="Wrap" Width="25">
                                                    </TextBlock>
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        </Style>
                         </data:DataGridTemplateColumn.HeaderStyle>
                        <data:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                	<TextBlock TextTrimming="None" TextAlignment="Center" TextWrapping="Wrap" Width="25" x:Name="tbDEPARTURECITY"></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </data:DataGridTemplateColumn.CellTemplate>
                    </data:DataGridTemplateColumn>
                    <data:DataGridTemplateColumn Header="ARRIVALTIME"><!--到达时间-->
                    	<data:DataGridTemplateColumn.HeaderStyle>
                                        <Style TargetType="sdk:DataGridColumnHeader">
                                        <Setter Property="Template" Value="{StaticResource DataGridColoumnHeaderStyleTemplate}"></Setter>
                                        <Setter Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <TextBlock  Text="{Binding Converter={StaticResource ResourceConveter}, Source=ARRIVALTIME}" 
                                                           Foreground="{StaticResource HeaderBackgroundfontColor1}" x:Name="ContentFontColor"
                                                           TextTrimming="None" TextAlignment="Center" TextWrapping="Wrap" Width="63">
                                                    </TextBlock>
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        </Style>
                         </data:DataGridTemplateColumn.HeaderStyle>
                        <data:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                             <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                                <TextBlock x:Name="tbEndTime" Text="{Binding ENDDATE,Mode=TwoWay,Converter={StaticResource CustomDateConverter},ConverterParameter=DATETIME}"
                                          Width="63" TextTrimming="None" TextAlignment="Center" TextWrapping="Wrap" ></TextBlock>
                             </StackPanel>
							</DataTemplate>
                        </data:DataGridTemplateColumn.CellTemplate>
                    </data:DataGridTemplateColumn>

                    <data:DataGridTemplateColumn Header="ARRIVALCITY"><!--到达城市-->
                    	<data:DataGridTemplateColumn.HeaderStyle>
                                        <Style TargetType="sdk:DataGridColumnHeader">
                                        <Setter Property="Template" Value="{StaticResource DataGridColoumnHeaderStyleTemplate}"></Setter>
                                        <Setter Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <TextBlock  Text="{Binding Converter={StaticResource ResourceConveter}, Source=ARRIVALCITY}" 
                                                           Foreground="{StaticResource HeaderBackgroundfontColor1}" x:Name="ContentFontColor"
                                                           TextTrimming="None" TextAlignment="Center" TextWrapping="Wrap" Width="25" >
                                                    </TextBlock>
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        </Style>
                         </data:DataGridTemplateColumn.HeaderStyle>
                        <data:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                	<TextBlock Width="25" TextTrimming="None" TextAlignment="Center" TextWrapping="Wrap" x:Name="tbTARGETCITIES"></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </data:DataGridTemplateColumn.CellTemplate>
                    </data:DataGridTemplateColumn>
                    
                    
                                    <data:DataGridTemplateColumn Header="BUSINESSDAYS"><!--出差天数-->
                                    	<data:DataGridTemplateColumn.HeaderStyle>
                                        <Style TargetType="sdk:DataGridColumnHeader">
                                        <Setter Property="Template" Value="{StaticResource DataGridColoumnHeaderStyleTemplate}"></Setter>
                                        <Setter Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <TextBlock  Text="{Binding Converter={StaticResource ResourceConveter}, Source=BUSINESSDAYS}" 
                                                           Foreground="{StaticResource HeaderBackgroundfontColor1}" x:Name="ContentFontColor"
                                                           TextTrimming="None" TextAlignment="Center" TextWrapping="Wrap" Width="25">
                                                    </TextBlock>
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        </Style>
                                    </data:DataGridTemplateColumn.HeaderStyle>
									
                                        <data:DataGridTemplateColumn.CellTemplate>
