<smtLocal:BaseForm xmlns:smtLocal="clr-namespace:SMT.SaaS.OA.UI"  x:Class="SMT.SaaS.OA.UI.Views.BenefitsAdministration.UpdateWelfarePaymentDetailsChildWindows"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:validator="clr-namespace:SMT.SaaS.FrameworkUI.Validator;assembly=SMT.SaaS.FrameworkUI"
    xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
    xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls" >
    <Grid x:Name="LayoutRoot">
     <validator:ValidatorManager x:Name="Group1"></validator:ValidatorManager>
	 <Grid x:Name="GridTitle" Grid.Row="0">
	 </Grid>
	 <Grid Grid.Row="1">
	 	<Grid.RowDefinitions>
			<RowDefinition Height="0"></RowDefinition>
			<RowDefinition Height="30"></RowDefinition>
			<RowDefinition Height="*"></RowDefinition>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.15*"></ColumnDefinition>
			<ColumnDefinition Width="0.85*"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<TextBlock Text="标准" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Height="22" />
		<TextBlock Text="备注" Grid.Row="2" Grid.Column="0"  TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,4,0,0"  />
	   <TextBox x:Name="txtNotes" AcceptsReturn="True" Margin="0,0,50,3" Grid.Row="2" MinHeight="100" Grid.Column="1" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" Style="{StaticResource TextBoxStyle}" VerticalAlignment="Top"/>
	   <TextBox x:Name="txtWelfareStandard" Margin="0,0,100,3" TextWrapping="NoWrap" Grid.Column="1" Grid.Row="1" d:LayoutOverrides="Height" Style="{StaticResource TextBoxStyle}"/>
        </Grid>
    </Grid>
</smtLocal:BaseForm>
