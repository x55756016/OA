<smtLocal:BaseForm xmlns:smtLocal="clr-namespace:SMT.SaaS.OA.UI"  x:Class="SMT.SaaS.OA.UI.UserControls.SurveyShowList_sat_1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Margin="0,5,0,0">
    <Grid x:Name="LayoutRoot" Loaded="LayoutRoot_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="24"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock   Grid.Column="0" Grid.Row="0" x:Name="txbSubId" VerticalAlignment="Center"></TextBlock>
        <TextBlock   Grid.Column="1" Grid.Row="0" x:Name="txbSubContent" VerticalAlignment="Center" TextWrapping="Wrap"></TextBlock>
        <TextBox HorizontalAlignment="Right"   Grid.Column="2" Grid.Row="0" x:Name="txtSubResult" VerticalAlignment="Center" BorderThickness="0 0 0 0.8" BorderBrush="Red"  HorizontalContentAlignment="Left"></TextBox>
        <StackPanel  Grid.Column="1" Grid.Row="1" x:Name="spAnswerList" Orientation="Horizontal"  Grid.ColumnSpan="3"></StackPanel>
    </Grid>
</smtLocal:BaseForm>