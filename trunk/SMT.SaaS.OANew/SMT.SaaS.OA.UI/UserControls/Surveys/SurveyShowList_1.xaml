<smtLocal:BaseForm xmlns:smtLocal="clr-namespace:SMT.SaaS.OA.UI"  x:Class="SMT.SaaS.OA.UI.UserControls.SurveyShowList_1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="auto" Height="auto" Margin="0,5,0,0">
    <Grid x:Name="LayoutRoot" Loaded="LayoutRoot_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock   Grid.Column="0" Grid.Row="0" x:Name="txbSubId" ></TextBlock>
        <TextBlock   Grid.Column="1" Grid.Row="0" x:Name="txbSubContent" TextWrapping="Wrap"></TextBlock>
        <StackPanel  Grid.Column="1" Grid.Row="1" x:Name="spAnswerList" Orientation="Horizontal" Margin="10,10,10,10" Grid.ColumnSpan="2"></StackPanel>
    </Grid>
</smtLocal:BaseForm>