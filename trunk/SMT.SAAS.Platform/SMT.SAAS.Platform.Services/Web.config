    <add key="TracePath" value="C:\Temp"/>
    <add key="TraceLevel" value="Debug,Warn"/>
    <add key="ConnectionString" value="Data Source=SMTSAAS94;User Id=smtportal;Password=test;Integrated Security=no;"/>
