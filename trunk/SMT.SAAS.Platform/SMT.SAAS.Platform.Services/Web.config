    <add key="SMTPLogin" value="gaoyan2@sinomaster.com"/>
    <add key="SMTPPassword" value="******"/>
    <add key="SMTPPort" value="25"/>
    <add key="AssemblyVersion" value="SMT.Foundation.Log,Entity, FlashTrade,Core"/>
    <!--**********异常日志配置 结束**********-->
