<UserControl x:Class="SMT.SAAS.Platform.WebParts.Views.CreateNewTask"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:CWrapPanel="clr-namespace:SMT.SAAS.Platform.Controls.CWrapPanel;assembly=SMT.SAAS.Platform.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <Grid x:Name="PARENT">
        <ItemsControl x:Name="itmcTaskList" Background="Transparent">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Background="White" Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="12,12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="2" />
                        </Grid.RowDefinitions>

                        <TextBlock Margin="10,6,0,0"
                                   HorizontalAlignment="Left"
                                   FontFamily="Arial,SimSun"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#8E8E8E"
                                   Text="{Binding ModuleName}" />

                        <ItemsControl Grid.Row="1"
                                      Margin="0 5 0 10"
                                      Background="Transparent"
                                      ItemsSource="{Binding Items}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <CWrapPanel:WrapPanel Background="Transparent" Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <HyperlinkButton Grid.Column="2"
                                                         Margin="5"
                                                         HorizontalAlignment="Left"
                                                         VerticalAlignment="Center"
                                                         Click="HyperlinkButton_Click"
                                                         DataContext="{Binding}"
                                                         FontFamily="Arial,SimSun"
                                                         FontSize="12"
                                                         Style="{StaticResource HyperlinkButtonNoborder}">
                                            <HyperlinkButton.Content>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition />
                                                        <RowDefinition />
                                                    </Grid.RowDefinitions>
                                                    <Image x:Name="imIoc"
                                                           Width="48"
                                                           Height="48"
                                                           Margin="0"
                                                           Source="{Binding ModuleIcon}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center" />
                                                    <TextBlock x:Name="tbTitel"
                                                               Grid.Row="1"
                                                               Height="auto"
                                                               MaxHeight="28"
                                                               Margin="0 3 0 0"
                                                               FontFamily="SimSun"
                                                               FontSize="12"
                                                               Foreground="#a7a7a7"
                                                               Text="{Binding Path=ModuleName}"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap" />

                                                </Grid>

                                            </HyperlinkButton.Content>
                                        </HyperlinkButton>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Border Grid.Row="2"
                                Height="2"
                                Margin="0,0,0,0"
                                VerticalAlignment="Top"
                                Background="#DaD9De"
                                BorderBrush="#DaD9De"
                                BorderThickness="2" />
                        <Border Grid.Row="2"
                                Height="2"
                                Margin="0,2,0,0"
                                VerticalAlignment="Top"
                                Background="#DaD9De"
                                BorderBrush="#FFFFFD"
                                BorderThickness="2" />
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
