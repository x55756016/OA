<UserControl x:Class="SMT.SAAS.Platform.WebParts.Views.NewsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vds="clr-namespace:SMT.SAAS.Platform.WebParts.ViewModels.Foundation"
             xmlns:cvt="clr-namespace:SMT.SAAS.Platform.WebParts.Converters"
             xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
             xmlns:my="clr-namespace:SMT.SaaS.FrameworkUI.FileUpload;assembly=SMT.SaaS.FrameworkUI"
             xmlns:rich="clr-namespace:SMT.SaaS.PublicControls;assembly=SMT.SaaS.PublicControls"
             xmlns:upload="clr-namespace:SMT.FileUpLoad;assembly=SMT.FileUpLoad"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <UserControl.Resources>
        <cvt:DataFormatConvert x:Key="DataFormat" />
        <cvt:BoolToVisibility x:Key="BoolToVsb" />
    </UserControl.Resources>

    <Grid x:Name="currentEntity"
          Margin="5 15 5 5"
          CacheMode="BitmapCache"
          vds:ValidationScope.ValidationScope="{Binding ValidationContent}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>

        <!--  第0行  -->
        <TextBlock MinWidth="63"
                   Margin="0 0 2 0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   FontFamily="SimSun"
                   FontSize="12"
                   Text="标    题:" />
        <TextBox x:Name="txbTitel"
                 Grid.Column="1"
                 MinWidth="145"
                 Margin="5"
                 FontFamily="Arial,SimSun"
                 FontSize="12"
                 MaxLength="50"
                  ToolTipService.ToolTip="新闻标题，最长为50个字符！"
                 Text="{Binding Path=NEWSTITEL,
                                Mode=TwoWay,
                                ValidatesOnExceptions=true,
                                NotifyOnValidationError=true}" />
        <TextBlock    Grid.Column="2"
                   Margin="2"
                 
                   VerticalAlignment="Center"
                   FontFamily="SimSun"
                   FontSize="12"
                   Foreground="Red"
                      
                   Text="*" />

        <TextBlock Grid.Column="3"
                   Margin="0 0 2 0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   FontFamily="SimSun"
                   FontSize="12"
                   Text="类      别:" />
        <ComboBox x:Name="cbxTypeid"
                  Grid.Column="4"
                  Margin="5 0 0 0 "
                  HorizontalAlignment="Left"
                  VerticalAlignment="Center"
                  DisplayMemberPath="Name"
                  FontFamily="SimSun"
                  FontSize="12"
                  ItemsSource="{Binding NEWSTYPELIST,
                                        Mode=TwoWay}"
                  SelectedItem="{Binding Path=NEWSTYPE,
                                         Mode=TwoWay}"
                  Style="{StaticResource ComboBoxStyle}" />

        <!--  第1行  -->
        <TextBlock Grid.Row="1"
                   MinWidth="63"
                   Margin="0 0 2 0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   FontFamily="SimSun"
                   FontSize="12"
                   Text="状    态:" />
        <ComboBox x:Name="cbxusestate"
                  Grid.Row="1"
                  Grid.Column="1"
                  Width="145"
                  Margin="5 0 0 0 "
                  HorizontalAlignment="Left"
                  VerticalAlignment="Center"
                  DisplayMemberPath="Name"
                  FontFamily="SimSun"
                  FontSize="12"
                  ItemsSource="{Binding NEWSSTATELIST,
                                        Mode=TwoWay}"
                  SelectedItem="{Binding Path=NEWSSTATE,
                                         Mode=TwoWay}"
                  Style="{StaticResource ComboBoxStyle}" />

        <TextBlock Grid.Row="1"
                   Grid.Column="2"
                   Margin="0 0 2 0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   FontFamily="SimSun"
                   FontSize="12"
                   Text="发布到首页:"
                   Visibility="Collapsed" />

        <CheckBox x:Name="ckbisrel"
                  Grid.Row="1"
                  Grid.Column="3"
                  Margin="5"
                  IsChecked="{Binding Path=ISRELEASE,
                                      Mode=TwoWay,
                                      ValidatesOnExceptions=true,
                                      NotifyOnValidationError=true}"
                  Visibility="Collapsed" />

        <TextBlock Grid.Row="1"
                   Grid.Column="3"
                   MinWidth="63"
                   Margin="0 0 2 0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   FontFamily="SimSun"
                   FontSize="12"
                   Text="发布日期:" />
        <sdk:DatePicker x:Name="sampleLongDatePicker"
                        Grid.Row="1"
                        Grid.Column="4"
                        Margin="5"
                        SelectedDate="{Binding UPDATEDATE,
                                               Mode=TwoWay,
                                               ValidatesOnExceptions=true,
                                               NotifyOnValidationError=true}"
                        SelectedDateFormat="Long"
                        Style="{StaticResource DatePickerStyle}" />

        <!--  第2行  -->
        <TextBlock Grid.Row="2"
                   MinWidth="63"
                   Margin="0 0 2 0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   FontFamily="SimSun"
                   FontSize="12"
                   Text="弹出新闻:" />
        <StackPanel 
                    Grid.Row="2"
                    Grid.Column="1"
                    Grid.ColumnSpan="4"
                    Orientation="Horizontal">

            <CheckBox x:Name="ckbispopup"
                      Margin="5"
                      IsChecked="{Binding Path=ISPOPUP,
                                          Mode=TwoWay,
                                          ValidatesOnExceptions=true,
                                          NotifyOnValidationError=true}" />

            <StackPanel Margin="25 0 2 0" Orientation="Horizontal"
                          Visibility="{Binding Path=ISPOPUP,
                                                     Mode=TwoWay,
                                                     Converter={StaticResource BoolToVsb}}" >
                <TextBlock MinWidth="63"
                           Margin="25 0 2 0"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           FontFamily="SimSun"
                           FontSize="12"
                           Text="终止日期:" 
                           />

                <sdk:DatePicker 
                                Margin="25 0 2 0"
                                SelectedDate="{Binding ENDDATE,
                                                       Mode=TwoWay,
                                                       ValidatesOnExceptions=true,
                                                       NotifyOnValidationError=true}"
                                SelectedDateFormat="Long"
                                Style="{StaticResource DatePickerStyle}" />
            </StackPanel>

        </StackPanel>
        <!--  第3行  -->
        <TextBlock Grid.Row="3"
                   MinWidth="63"
                   Margin="0 0 2 0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   FontFamily="SimSun"
                   FontSize="12"
                   Text="图片新闻:" />
        <StackPanel x:Name="fileUpload"
                    Grid.Row="3"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    Orientation="Horizontal">
            <CheckBox x:Name="ckbisimg"
                      Margin="5"
                      IsChecked="{Binding Path=ISIMAGE,
                                          Mode=TwoWay,
                                          ValidatesOnExceptions=true,
                                          NotifyOnValidationError=true}" />
            <upload:FileControl  Name="sMTFileUpload1"  Width="270" 
                                  Visibility="{Binding Path=ISIMAGE,
                                                     Mode=TwoWay,
                                                     Converter={StaticResource BoolToVsb}}"/>
            <!--<my:CtrlFileUploadM x:Name="ctrUpload"
                                HorizontalAlignment="Center"
                                Filter="Image Files (*.png, *.jpg)|*.png;*.jpg"
                                Visibility="{Binding Path=ISIMAGE,
                                                     Mode=TwoWay,
                                                     Converter={StaticResource BoolToVsb}}" />
            <Button x:Name="btnUpload"
                    Margin="5"
                    Click="btnUpload_Click"
                    Content="上传"
                    FontFamily="Arial,SimSun"
                    FontSize="12"
                    Style="{StaticResource CommonButtonStyle}"
                    Tag="0"
                    Visibility="Collapsed" />-->
        </StackPanel>

        <!--  第4行  -->
        <!--  选择发布对象  -->
        <Grid x:Name="SelectAuditPersonPnl"
              Grid.Row="4"
              Grid.ColumnSpan="2"
              Height="29"
              Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="63" />
                <ColumnDefinition />
                <ColumnDefinition Width="AUTO"/>
            </Grid.ColumnDefinitions>

            <!--  选择下一审核人,在为逐级审批的时候显示  -->
            <TextBlock Grid.Row="1"
                       Margin="0,0,10,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontFamily="Arial,SimSun"
                       FontSize="12"
                       Text="发布对象:" />
            <Grid Grid.Row="1"
                  Grid.Column="1"
                  Width="Auto"
                  Margin="2 0 0 0"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="23" />
                </Grid.ColumnDefinitions>
                <!--  ="{Binding Path=NEWSTYPELIST, Mode=TwoWay,ValidatesOnExceptions=true, NotifyOnValidationError=true}"  -->
                <TextBox x:Name="txtAuditName"
                         Grid.Column="0"
                         Width="Auto"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center"
                         IsReadOnly="True"
                         Style="{StaticResource TextBoxStyle}" />
                <TextBox x:Name="txtAuditId"
                         Grid.Column="0"
                         Style="{StaticResource TextBoxStyle}"
                         Visibility="Collapsed" />
                <Button x:Name="btnLookUpDepartment"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                    <Image Width="16"
                           Height="16"
                           Source="/SMT.SaaS.FrameworkUI;component/Images/tool/LookUp.png" />
                </Button>
            </Grid>
            <TextBlock    Grid.Column="2"
                   Margin="2"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   FontFamily="SimSun"
                   FontSize="12"
                   Foreground="Red"
                   Text="*" />
        </Grid>
        <!--  发布部门  -->
        <Grid x:Name="SelectPutDept"
              Grid.Row="5"
              Grid.ColumnSpan="2"
              Height="29"
              Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="63" />
                <ColumnDefinition />
                <ColumnDefinition Width="AUTO"/>
            </Grid.ColumnDefinitions>
            
            <!--  选择下一审核人,在为逐级审批的时候显示  -->
            <TextBlock Grid.Row="1"
                       Margin="0,0,10,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontFamily="Arial,SimSun"
                       FontSize="12"
                       Text="发布部门:" />
            <Grid Grid.Row="1"
                  Grid.Column="1"
                  Width="Auto"
                  Margin="2 0 0 0"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="23" />
                </Grid.ColumnDefinitions>
                <!--  ="{Binding Path=NEWSTYPELIST, Mode=TwoWay,ValidatesOnExceptions=true, NotifyOnValidationError=true}"  -->
                <TextBox x:Name="txtDeptName"
                         Grid.Column="0"
                         Width="Auto"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center"
                         IsReadOnly="True"
                         Style="{StaticResource TextBoxStyle}" />
                <TextBox x:Name="txtDeptId"
                         Grid.Column="0"
                         Style="{StaticResource TextBoxStyle}"
                         Visibility="Collapsed" />
                <Button x:Name="btnLookUpPutDepartment"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                    <Image Width="16"
                           Height="16"
                           Source="/SMT.SaaS.FrameworkUI;component/Images/tool/LookUp.png" />
                </Button>
            </Grid>
            <TextBlock    Grid.Column="2"
                   Margin="2"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   FontFamily="SimSun"
                   FontSize="12"
                   Foreground="Red"
                   Text="*" />
        </Grid>
        <!--  第6行  -->
        <rich:RichTextBox  x:Name="rtbContent"
                           Grid.Row="6"
                           Grid.ColumnSpan="5"
                           Margin="5" />
        <!--  第7行  -->
        <StackPanel x:Name="StatePanel"
                    Grid.Row="7"
                    Grid.ColumnSpan="5"
                    Margin="1 0 1 0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <Button x:Name="btnADD"
                    Margin="5"
                    Click="btnADD_Click"
                    Content="新增"
                    FontFamily="Arial,SimSun"
                    FontSize="12"
                    Style="{StaticResource CommonButtonStyle}"
                    Tag="0" />
            <Button x:Name="btnUpdate"
                    Margin="5"
                    Click="btnUpdate_Click"
                    Content="修改"
                    FontFamily="Arial,SimSun"
                    FontSize="12"
                    Style="{StaticResource CommonButtonStyle}"
                    Tag="0" />
            <Button x:Name="btnDelete"
                    Margin="5"
                    Command="{Binding DeleteEntity}"
                    Content="删除"
                    FontFamily="Arial,SimSun"
                    FontSize="12"
                    Style="{StaticResource CommonButtonStyle}"
                    Tag="0" />
        </StackPanel>
        <StackPanel x:Name="SavePanel"
                    Grid.Row="7"
                    Grid.ColumnSpan="5"
                    Margin="1 0 1 0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Visibility="Collapsed">
            <Button x:Name="btnSave"
                    Margin="5"
                    Click="btnSave_Click"
                    Command="{Binding SaveEntity}"
                    Content="保存"
                    FontFamily="Arial,SimSun"
                    FontSize="12"
                    Style="{StaticResource CommonButtonStyle}"
                    Tag="0" />
            <Button x:Name="btnUpdate1"
                    Margin="5"
                    Click="btnSave_Click"
                    Command="{Binding UpdateEntity}"
                    Content="保存"
                    FontFamily="Arial,SimSun"
                    FontSize="12"
                    Style="{StaticResource CommonButtonStyle}"
                    Tag="0"
                    Visibility="Collapsed" />

            <Button x:Name="btnReset"
                    Margin="5"
                    Click="btnReset_Click"
                    Content="取消"
                    FontFamily="Arial,SimSun"
                    FontSize="12"
                    Style="{StaticResource CommonButtonStyle}"
                    Tag="0" />

        </StackPanel>
    </Grid>
</UserControl>
