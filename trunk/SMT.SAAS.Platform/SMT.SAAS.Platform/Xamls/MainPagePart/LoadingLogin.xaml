				<DiscreteColorKeyFrame KeyTime="0:0:0.45" Value="#FF437BC1"/>
				<DiscreteColorKeyFrame KeyTime="0:0:0.6" Value="#FF437BC1"/>
				<DiscreteColorKeyFrame KeyTime="0:0:0.75" Value="#FF437BC1"/>
