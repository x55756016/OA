                                <ContentPresenter Content="公司" Grid.Row="2" VerticalAlignment="Center"
                                          HorizontalAlignment="Center" Grid.Column="2"/>
                                <Rectangle Fill="#FFC9CACA" VerticalAlignment="Stretch" Width="1" 
