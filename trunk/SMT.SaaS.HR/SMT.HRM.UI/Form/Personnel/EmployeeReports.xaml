                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="1" />
                                    <RowDefinition Height="20" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="1" />
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="1" />
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="1" />
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="1" />
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="1" />
                                    <ColumnDefinition Width="80"/>
