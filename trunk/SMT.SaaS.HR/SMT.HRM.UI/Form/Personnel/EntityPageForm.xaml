<swc:Window x:Class="SMT.HRM.UI.Form.Personnel.EntityPageForm" 
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
            xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls" 
            xmlns:swc="clr-namespace:System.Windows.Controls;assembly=SMT.SaaS.Window"
            xmlns:smt="clr-namespace:SMT.SaaS.FrameworkUI;assembly=SMT.SaaS.FrameworkUI"
            MinWidth="420" MinHeight="240" Loaded="Window_Loaded"
            >
    <Border Style="{StaticResource BorderStyle}" HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch" BorderThickness="1"  >
        <Grid x:Name="LayoutRoot" Margin="0" HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch" Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <smt:ToolBar x:Name="toolBar1"  HorizontalAlignment="Stretch" Grid.Row="0"/>
            <StackPanel Margin="0" Grid.Row="1" Width="Auto" HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch" x:Name="Container" Background="Transparent">

                <Border x:Name="EntityContainer" HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch">
                    <StackPanel x:Name="pnlEntity" HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch">
                    </StackPanel>
                </Border>
            </StackPanel>
            <StackPanel x:Name="FootBar" Grid.Row="2" HorizontalAlignment="Right" Height="Auto" 
                        VerticalAlignment="Top" Margin="0" Orientation="Horizontal" >
            </StackPanel>
            <!--<smt:PagerToolBar x:Name="FormTitleState" Width="auto" Grid.Row="2" VerticalAlignment="Bottom" FontSize="12"/>-->
        </Grid>
    </Border>
</swc:Window>
