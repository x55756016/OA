                                        <RowDefinition Height="60"></RowDefinition>
                                        <RowDefinition Height="28"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <!--Row0-->
                                    <!--起始日期到结束日期-->
                                    <TextBlock Text="{Binding Converter={StaticResource ResourceConveter}, Source=STARTENDDATE}" 
                           Grid.Row="0" Grid.Column="0" ></TextBlock>
                                    <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" Margin="5 0 0 0">
                                        <Grid x:Name="EduGrid">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.45*"></ColumnDefinition>
                                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                                <ColumnDefinition Width="0.45*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="26"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <ctr:DatePicker x:Name="dtpStartDate" Text="{Binding STARTDATE,Mode=TwoWay}"  Grid.Column="0" Grid.Row="0" Style="{StaticResource DatePickerStyle}" Width="auto" IsEnabled="False" HorizontalAlignment="Stretch" Margin="0"></ctr:DatePicker>
                                            <dataInput:Label Content="到"  Grid.Column="1" Grid.Row="0"></dataInput:Label>
                                            <ctr:DatePicker x:Name="dtpEndDate" Text="{Binding ENDDATE,Mode=TwoWay}"  Grid.Column="2" Grid.Row="0" Style="{StaticResource DatePickerStyle}"  IsEnabled="False" Width="auto"></ctr:DatePicker>
                                        </Grid>
                                    </StackPanel>
                                        <!--按钮：修改-->
                                        <Button x:Name="btnModifyEdu" Content="修改" Grid.Row="0" Grid.Column="4"
                                                Click="BtnModifyEdu_Click"  Width="50"/>
                                        <!--按钮：删除-->
                                        <Button x:Name="btnDelEdu" Content="删除" Grid.Row="0" Grid.Column="4"
                                            Click="BtnDelEdu_Click"  Margin="120,0,0,0" Width="50"/>
                                        <!--专业-->
                                    <TextBlock Text="{Binding Converter={StaticResource ResourceConveter}, Source=SPECIALTY}" 
                           Grid.Row="1" Grid.Column="3" ></TextBlock>
                                    <TextBox Style="{StaticResource TextBoxStyle}"   MaxLength="50" IsReadOnly="True"
                         Text="{Binding SPECIALTY,Mode=TwoWay,ValidatesOnExceptions=true, NotifyOnValidationError=true}" 
                         Grid.Row="1" Grid.Column="4" HorizontalAlignment="Stretch"  TextWrapping="Wrap" Width="auto" x:Name="tbSpecial">
                                    </TextBox>
                                    <!--Row1-->
                                    <!--学校名称-->
                                    <TextBlock Text="{Binding Converter={StaticResource ResourceConveter}, Source=SCHOONAME}" 
                           Grid.Row="1" Grid.Column="0" ></TextBlock>
                                    <TextBox Style="{StaticResource TextBoxStyle}"  Width="auto" MaxLength="50" IsReadOnly="True"
                         Text="{Binding SCHOONAME,Mode=TwoWay,ValidatesOnExceptions=true, NotifyOnValidationError=true}" 
                         Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch"  TextWrapping="Wrap" x:Name="tbEduSchool">
                                    </TextBox>

                                    <!--学历-->
                                    <TextBlock Text="{Binding Converter={StaticResource ResourceConveter}, Source=EDUCATIONHISTORY}" 
                           Grid.Row="2" Grid.Column="0" ></TextBlock>
                                    <TextBox Style="{StaticResource TextBoxStyle}"   MaxLength="50" IsReadOnly="True"
                         Text="{Binding EDUCATIONHISTORY,Mode=TwoWay,ValidatesOnExceptions=true, NotifyOnValidationError=true}" 
                         Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch"  TextWrapping="Wrap" Width="auto" x:Name="tbEDUCATIONHISTORY" >

                                    </TextBox>
                                    <!--Row1-->
                                    <!--教育性质-->
                                    <TextBlock Text="{Binding Converter={StaticResource ResourceConveter}, Source=EDUCATIONPROPERTIE}" 
                           Grid.Row="2" Grid.Column="3" ></TextBlock>
                                    <TextBox Style="{StaticResource TextBoxStyle}"  Width="auto" MaxLength="50" IsReadOnly="True"
                         Text="{Binding EDUCATIONPROPERTIE,Mode=TwoWay,ValidatesOnExceptions=true, NotifyOnValidationError=true}" 
                         Grid.Row="2" Grid.Column="4" HorizontalAlignment="Stretch"  TextWrapping="Wrap" x:Name="tbEDUCATIONPROPERTIE">

                                    </TextBox>
                                    <!--Row2-->
                                    <!--备注-->
                                    <TextBlock Text="{Binding Converter={StaticResource ResourceConveter}, Source=REMARK}" 
                           Grid.Row="3" Grid.Column="0" ></TextBlock>
                                    <TextBox Style="{StaticResource TextBoxStyle}"  Width="auto" Height="48" AcceptsReturn="True" MaxLength="2000"
                         Text="{Binding REMARK,Mode=TwoWay,ValidatesOnExceptions=true, NotifyOnValidationError=true}"  IsReadOnly="True"
                         Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4" HorizontalAlignment="Stretch"  TextWrapping="Wrap" x:Name="tbEduREMARK"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                                </Grid>
                            </DataTemplate>
                        </data:DataGrid.RowDetailsTemplate>
                        <data:DataGrid.Columns>
                            <data:DataGridTemplateColumn  MinWidth="800">
                                <data:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                        </StackPanel>
                                    </DataTemplate>
                                </data:DataGridTemplateColumn.CellTemplate>
                            </data:DataGridTemplateColumn>

                        </data:DataGrid.Columns>
                    </data:DataGrid>
                </ScrollViewer>
                    <StackPanel>
                        <!--按钮：新增 工作经历-->
                        <Button x:Name="btnAddEdu" Content="新增" Width="50" Click="BtnAddEdu_Click" HorizontalAlignment="Left"
                                Grid.Row="0" Grid.Column="0" Height="25"></Button>
                    </StackPanel>
                </StackPanel>    
            </ctr:TabItem>
        </ctr:TabControl>
    </Grid>
</smtLocal:BaseForm>
