<smtLocal:BaseForm xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data" 
        xmlns:controls1="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:smtuc="clr-namespace:SMT.HRM.UI.Form.Attendance;assembly=SMT.HRM.UI"
        xmlns:smtLocal="clr-namespace:SMT.HRM.UI;assembly=SMT.HRM.UI"
        xmlns:ctr="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls" 
        xmlns:dataInput="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data.Input"
        xmlns:smt="clr-namespace:SMT.SaaS.FrameworkUI;assembly=SMT.SaaS.FrameworkUI"
        xmlns:appCtr="clr-namespace:SMT.HRM.UI.AppControl"
        xmlns:uc="clr-namespace:SMT.HRM.UI.Form.Personnel"
        xmlns:behaviors="clr-namespace:SMT.SAAS.Behaviors;assembly=SMT.SAAS.Behaviors" 
        xmlns:interaction="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:validator="clr-namespace:SMT.SaaS.FrameworkUI.Validator;assembly=SMT.SaaS.FrameworkUI"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    x:Class="SMT.HRM.UI.Form.Personnel.EmployeeForm"
     HorizontalAlignment="Stretch" VerticalAlignment="Stretch" mc:Ignorable="d">
    <Grid x:Name="LayoutRoot" Margin="10,10,5,5">
        <validator:ValidatorManager x:Name="Group1"></validator:ValidatorManager>
        <ctr:TabControl x:Name="tbcContainer" Margin="2"  VerticalAlignment="Top"  SelectionChanged="TbcContainer_SelectionChanged"  Style="{StaticResource TabControlStyle}">
            <ctr:TabItem Header="{Binding Converter={StaticResource ResourceConveter}, Source=EMPLOYEEINFO}"   ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" Style="{StaticResource TabItemStyle}">
                <ScrollViewer HorizontalScrollBarVisibility="Hidden"  VerticalScrollBarVisibility="Hidden">
                    <StackPanel  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>

                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>

                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>

                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="0.3*"/>
                                <ColumnDefinition Width="50"/>

                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="0.3*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>

                            <!--Row 0-->
                            <!--EMPLOYEECODE-->
                            <TextBlock Style="{StaticResource SysTextBlockStyle}"  Grid.Column="0" Grid.Row="0" 
            					Text="{Binding Converter={StaticResource ResourceConveter}, Source=EMPLOYEECODE}" />

                            <TextBox Style="{StaticResource TextBoxStyle}" x:Name="txtEmployeeCode"   HorizontalAlignment="Stretch" Width="Auto" MaxLength="50" IsEnabled="False"
            					Text="{Binding EMPLOYEECODE, Mode=TwoWay}" Grid.Row="0" Grid.Column="1" >
                            </TextBox>
                            <TextBlock  Style="{StaticResource SysTextBlockStyle}" Grid.Row="1" Grid.Column="0" 
            					Text="{Binding Converter={StaticResource ResourceConveter}, Source=EMPLOYEECNAME}" />

                            <TextBox Style="{StaticResource TextBoxStyle}" x:Name="txtEmployeeName"   Text="{Binding EMPLOYEECNAME, Mode=TwoWay}"   MaxLength="50"  
                                     Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" Width="Auto" IsReadOnly="True">
                            </TextBox>
                            <TextBlock  Style="{StaticResource SysTextBlockStyle}" Grid.Row="2" Grid.Column="0" 
            					Text="{Binding Converter={StaticResource ResourceConveter}, Source=EMPLOYEEENAME}" />

                            <TextBox Style="{StaticResource TextBoxStyle}" x:Name="txtEmployeeEName" HorizontalAlignment="Stretch" Width="Auto"  MaxLength="50" 
                                       Text="{Binding EMPLOYEEENAME, Mode=TwoWay}"  Grid.Row="2" Grid.Column="1">
                                <validator:ValidatorService.Validator>
                                    <validator:RequiredValidator ManagerName="Group1" ErrorMessage="REQUIRED" ErrorMessageParameter="EMPLOYEEENAME" ></validator:RequiredValidator>
                                </validator:ValidatorService.Validator>
                            </TextBox>

                            <TextBlock  Style="{StaticResource SysTextBlockStyle}" Grid.Row="3" Grid.Column="0" 
            					Text="{Binding Converter={StaticResource ResourceConveter}, Source=EMPLOYEESEX}" />

                            <appCtr:DictionaryComboBox  x:Name="cbxEmployeeSex" IsShowNull="False"  Category="SEX" SelectedValue="{Binding SEX, Mode=TwoWay}"
                             Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch" Width="auto"/>

                            <!--PHOTO-->
                            <TextBlock Style="{StaticResource SysTextBlockStyle}" 
            					Text="{Binding Converter={StaticResource ResourceConveter}, Source=PHOTO}" 
                                     Grid.Row="3"    Grid.Column="3" />

                            <smt:ImageSelect x:Name="imgSelect" ButtonToolTip="{Binding Converter={StaticResource ResourceConveter}, Source=UPLOADPHOTO}" Margin="5"
            					ImageField="{Binding PHOTO, Mode=TwoWay}" Grid.Row="0" Grid.RowSpan="4" Grid.ColumnSpan="2" Grid.Column="4" HorizontalAlignment="Left"  Width="110"/>


                            <!--Row 4-->
                            <!--NATION-->
                            <TextBlock  Style="{StaticResource SysTextBlockStyle}" Grid.Row="4" Grid.Column="0" 
            					Text="{Binding Converter={StaticResource ResourceConveter}, Source=NATION}" />

                            <appCtr:DictionaryComboBox x:Name="cbxNation" IsShowNull="False" Category="NATION" SelectedValue="{Binding NATION, Mode=TwoWay}"    
                                      Grid.Row="4" Grid.Column="1" HorizontalAlignment="Stretch" Width="auto"/>

                            <!--BIRTHDAY-->
                            <TextBlock  Style="{StaticResource SysTextBlockStyle}" Grid.Row="4" Grid.Column="3"  
            					Text="{Binding Converter={StaticResource ResourceConveter}, Source=BIRTHDAY}" />

                            <ctr:DatePicker x:Name="dateBirthday"  
            					  Text="{Binding BIRTHDAY,Mode=TwoWay, Converter={StaticResource CustomDateConverter},ConverterParameter=DATE}" Grid.Row="4" Grid.Column="4" Height="24" Style="{StaticResource DatePickerStyle}"/>

                            <!--Row 5-->
                            <!--BLOODTYPE-->
                            <TextBlock Style="{StaticResource SysTextBlockStyle}"  
            					Text="{Binding Converter={StaticResource ResourceConveter}, Source=BLOODTYPE}" 
                                      Grid.Row="5"  Grid.Column="0"  />

                            <appCtr:DictionaryComboBox x:Name="cbxBloodType" IsShowNull="False" Category="BLOODTYPE" SelectedValue="{Binding BLOODTYPE, Mode=TwoWay}"    
                                      Grid.Row="5" Grid.Column="1" HorizontalAlignment="Stretch" Width="auto"/>


                            <TextBlock   
            					Text="{Binding Converter={StaticResource ResourceConveter}, Source=FINGERPRINTID}" Style="{StaticResource SysTextBlockStyle}"  
                                       Grid.Row="5" Grid.Column="3"/>

                            <TextBox Style="{StaticResource TextBoxStyle}" x:Name="txtFingerPrintId"   Text="{Binding FINGERPRINTID, Mode=TwoWay}" MaxLength="50" LostFocus="TxtFingerPrintId_LostFocus"
                                      Grid.Row="5" Grid.Column="4" HorizontalAlignment="Stretch" Width="Auto" ></TextBox>

                            <!--Row 6-->
                            <!--IDTYPE-->
                            <TextBlock  Style="{StaticResource SysTextBlockStyle}"
            					Text="{Binding Converter={StaticResource ResourceConveter}, Source=IDTYPE}" 
                                       Grid.Row="6" Grid.Column="0"/>

                            <appCtr:DictionaryComboBox x:Name="cbxIDType" IsShowNull="False"   Category="IDTYPE"  SelectedValue="{Binding IDTYPE, Mode=TwoWay}"
                                                    Grid.Row="6" Grid.Column="1" HorizontalAlignment="Stretch" Width="Auto"/>
                            <!--IDNUMBER-->
                            <TextBlock Style="{StaticResource SysTextBlockStyle}"
            					Text="{Binding Converter={StaticResource ResourceConveter}, Source=IDNUMBER}" 
                                       Grid.Row="6" Grid.Column="3"/>

                            <TextBox Style="{StaticResource TextBoxStyle}" x:Name="txtIDNumber"   Text="{Binding IDNUMBER, Mode=TwoWay}" MaxLength="50"
                                      Grid.Row="6" Grid.Column="4" HorizontalAlignment="Stretch" Width="Auto" >
                                <validator:ValidatorService.Validator>
                                    <validator:RegexValidator ManagerName="Group1" ErrorMessage="MUSTBEIDCARDNUMBER" ErrorMessageParameter="IDNUMBER" Expression="^[a-zA-Z0-9-()]{1,20}$" ></validator:RegexValidator>
                                </validator:ValidatorService.Validator>
                            </TextBox>

                            <!--开户行-->
                            <TextBlock  Style="{StaticResource SysTextBlockStyle}"
                    			Text="{Binding Converter={StaticResource ResourceConveter},Source=BANKID}"  
                                        Grid.Row="7" Grid.Column="0"/>

                            <TextBox Style="{StaticResource TextBoxStyle}" x:Name="txtBankID"   Grid.Row="7" Grid.Column="1"  MaxLength="50"
                                     HorizontalAlignment="Stretch" Width="Auto"
                                     Text="{Binding BANKID, Mode=TwoWay}" />

                            <!--BANKCARDNUMBER-->
                            <TextBlock   Grid.Row="7" Grid.Column="3" Style="{StaticResource SysTextBlockStyle}"
                    			Text="{Binding Converter={StaticResource ResourceConveter}, Source=BANKCARDNUMBER}"/>

                            <TextBox Style="{StaticResource TextBoxStyle}" x:Name="txtBankCardNumber"  MaxLength="50" Text="{Binding BANKCARDNUMBER,Mode=TwoWay}"
                                       Grid.Row="7" Grid.Column="4" HorizontalAlignment="Stretch" Width="Auto"/>

                            <!--HEIGHT-->
                            <TextBlock Style="{StaticResource SysTextBlockStyle}"
            					Text="{Binding Converter={StaticResource ResourceConveter}, Source=HEIGHT}" 
                                        Grid.Row="8" Grid.Column="0" />

                            <TextBox Style="{StaticResource TextBoxStyle}" x:Name="txtHeight"   Text="{Binding HEIGHT, Mode=TwoWay}" MaxLength="5"
            					 Grid.Row="8" Grid.Column="1" HorizontalAlignment="Stretch" Width="Auto"/>


                            <!--工作开始时间-->
                            <TextBlock Style="{StaticResource SysTextBlockStyle}"  Grid.Row="8" Grid.Column="3"
                    			Text="社保缴纳起始时间"/>
                            <controls1:DatePicker HorizontalAlignment="Stretch"  Text="{Binding SOCIALSERVICEYEAR,Mode=TwoWay, Converter={StaticResource CustomDateConverter},ConverterParameter=DATE}"
                               Grid.Row="8" Grid.Column="4" x:Name="dtpStartWorkTime" Margin="5,0,0,0" Height="24" Style="{StaticResource DatePickerStyle}" ></controls1:DatePicker>

                            <dataInput:DescriptionViewer  Target="{Binding ElementName=txtHeight}" 
            					Style="{StaticResource DescriptionViewerTooltipStyle}" Grid.Row="7" Grid.Column="5"/>


                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="0.3*"/>
                                <ColumnDefinition Width="50"/>

                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="0.3*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15"></RowDefinition>
                                <RowDefinition></RowDefinition>

                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>

                            <!--Row 0-->
                            <Border Height="1" BorderBrush="#FF6D8193" Grid.Row="0" BorderThickness="1" Grid.ColumnSpan="6" HorizontalAlignment="Stretch" Width="Auto" VerticalAlignment="Center"  />

                            <!--Row 1-->
                            <!--SECONLANGUAGE-->
                            <TextBlock Style="{StaticResource SysTextBlockStyle}"  Grid.Row="1" Grid.Column="0"
            					Text="{Binding Converter={StaticResource ResourceConveter}, Source=SECONLANGUAGE}"  />
                            <appCtr:DictionaryComboBox x:Name="cbxSecondLanguage" IsShowNull="False" Category="SECONDLANGUAGE" Height="24"
                                SelectedValue="{Binding SECONDLANGUAGE, Mode=TwoWay}" Grid.Row="1" Grid.Column="1" Width="Auto" HorizontalAlignment="Stretch"/>
                            <!--SECONLANGUAGEDEGREE-->
                            <TextBlock Style="{StaticResource SysTextBlockStyle}"  
            					Text="{Binding Converter={StaticResource ResourceConveter}, Source=SECONLANGUAGEDEGREE}" 
                                        Grid.Row="1" Grid.Column="3" />
                            <appCtr:DictionaryComboBox x:Name="cbxSecondLanguageDegree" IsShowNull="False"  Category="SECONDLANGUAGEDEGREE" Height="24"
                                SelectedValue="{Binding SECONDLANGUAGEDEGREE, Mode=TwoWay}" Grid.Row="1" Grid.Column="4"  Width="Auto" HorizontalAlignment="Stretch"/>


                            <TextBlock Style="{StaticResource SysTextBlockStyle}"  Grid.Row="2" Grid.Column="0"
            					Text="{Binding Converter={StaticResource ResourceConveter}, Source=EMPLOYEESTATE}" />

                            <appCtr:DictionaryComboBox  x:Name="cbxEmployeeState" IsShowNull="False"  Category="EMPLOYEESTATE" Height="24"
                                SelectedValue="{Binding EMPLOYEESTATE, Mode=TwoWay}"
                             Grid.Row="2" Grid.Column="1" Width="Auto" HorizontalAlignment="Stretch"/>

                            <!--PROFESSIONALTITLE-->
                            <TextBlock  Style="{StaticResource SysTextBlockStyle}" Grid.Row="2" Grid.Column="3" 
            					Text="{Binding Converter={StaticResource ResourceConveter}, Source=PROFESSIONALTITLE}" />
                            <appCtr:DictionaryComboBox  x:Name="cbxProfessionalTitle" IsShowNull="False" Category="PROFESSIONALTITLE" Height="24"
                            SelectedValue="{Binding PROFESSIONALTITLE, Mode=TwoWay}" 
                             Grid.Row="2" Grid.Column="4" Width="Auto" HorizontalAlignment="Stretch"/>

                            <!--Row 5-->
                            <!--TIPTOPEDUCATION-->
                            <TextBlock  Style="{StaticResource SysTextBlockStyle}"  Grid.Row="3" Grid.Column="0" 
            					Text="{Binding Converter={StaticResource ResourceConveter}, Source=TIPTOPEDUCATION}" />

                            <appCtr:DictionaryComboBox  x:Name="cbxTopEducation" IsShowNull="False"  Category="TOPEDUCATION" Height="24"
                                SelectedValue="{Binding TOPEDUCATION, Mode=TwoWay}" 
                             Grid.Row="3" Grid.Column="1" Width="Auto" HorizontalAlignment="Stretch"/>

                            <!--POLITICS-->
                            <TextBlock Style="{StaticResource SysTextBlockStyle}"  Grid.Row="3" Grid.Column="3" 
            					Text="{Binding Converter={StaticResource ResourceConveter}, Source=POLITICS}" />

                            <appCtr:DictionaryComboBox x:Name="cbxPolitics" IsShowNull="False"  Category="POLITICS" Height="24"
                                    SelectedValue="{Binding POLITICS, Mode=TwoWay}"
                                                   Grid.Row="3" Grid.Column="4" Width="Auto" HorizontalAlignment="Stretch"/>

                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="0.3*"/>
                                <ColumnDefinition Width="50"/>

                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="0.3*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15"></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>

                            <!--Row 0-->
                            <Border Height="1" BorderBrush="#FF6D8193" Grid.Row="0" BorderThickness="1" Grid.ColumnSpan="6" HorizontalAlignment="Stretch" Width="Auto" VerticalAlignment="Center"  />

                            <!---Row 1-->
                            <!--WORKINGAGE-->
                            <TextBlock Style="{StaticResource SysTextBlockStyle}"  Grid.Row="1" Grid.Column="0"
                    			Text="{Binding Converter={StaticResource ResourceConveter}, Source=WORKINGAGE}" />
                            <TextBox Style="{StaticResource TextBoxStyle}" x:Name="txtWorkingAge"   Text="{Binding WORKINGAGE, Mode=TwoWay}" Height="24"
                    			 Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" Width="Auto"/>
                            <dataInput:DescriptionViewer  Target="{Binding ElementName=txtWorkingAge}" 
                    			Style="{StaticResource DescriptionViewerTooltipStyle}" HorizontalAlignment="Left"
                                                           Grid.Row="1" Grid.Column="2"/>


                            <!--MARRIAGE-->
                            <TextBlock  Style="{StaticResource SysTextBlockStyle}"  Grid.Row="1" Grid.Column="3"
                    			Text="{Binding Converter={StaticResource ResourceConveter}, Source=MARRIAGE}"/>

                            <appCtr:DictionaryComboBox x:Name="cbxMarriage" IsShowNull="False" Category="MARRIAGE" Width="auto" Height="24"
                                    SelectedValue="{Binding MARRIAGE, Mode=TwoWay}"
                                                      Grid.Row="1" Grid.Column="4" HorizontalAlignment="Stretch"/>                            
                            <!---Row 2-->
                            <!--HASCHILDREN-->
                            <TextBlock Style="{StaticResource SysTextBlockStyle}"  Grid.Row="2" Grid.Column="0"
                    			Text="{Binding Converter={StaticResource ResourceConveter}, Source=HASCHILDREN}" />
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                                <CheckBox x:Name="chkHas" Margin="5,5,0,0"/>
                            </StackPanel>

                           
                           

                            <!--Row 3-->
                            <!--PROVINCE-->
                            <TextBlock  Style="{StaticResource SysTextBlockStyle}" Grid.Row="3" Grid.Column="0"
                    			Text="{Binding Converter={StaticResource ResourceConveter}, Source=PROVINCE}" />
                            <appCtr:DictionaryComboBox x:Name="cbxProvince" IsShowNull="False" Category="PROVINCE" Height="24"
                                SelectedValue="{Binding PROVINCE, Mode=TwoWay}"
                              Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch" Width="Auto"/>

                             
                            <!--REGRESIDENCE-->
                            <TextBlock  Style="{StaticResource SysTextBlockStyle}"  Grid.Row="3" Grid.Column="3"
                    			Text="{Binding Converter={StaticResource ResourceConveter}, Source=REGRESIDENCE}"/>

                            <TextBox Style="{StaticResource TextBoxStyle}" x:Name="txtRegresidence"   Text="{Binding REGRESIDENCE, Mode=TwoWay}"  MaxLength="200" Height="24"
                    			Grid.Row="3" Grid.Column="4" HorizontalAlignment="Stretch" Width="Auto"/>

                            <!--Row 1-->
                            <!--RESIDENCETYPE-->
                            <TextBlock  Style="{StaticResource SysTextBlockStyle}" Grid.Row="4" Grid.Column="0"
                    			Text="{Binding Converter={StaticResource ResourceConveter}, Source=RESIDENCETYPE}" />

                            <appCtr:DictionaryComboBox x:Name="cbxResidenceType" IsShowNull="False" Category="RESIDENCETYPE" Height="24"
                                SelectedValue="{Binding RESIDENCETYPE, Mode=TwoWay}"
                              Grid.Row="4" Grid.Column="1" HorizontalAlignment="Stretch" Width="Auto"/>


                            <!--REGRESIDENCETYPE-->
                            <TextBlock  Style="{StaticResource SysTextBlockStyle}" Grid.Row="4" Grid.Column="3"
                    			Text="{Binding Converter={StaticResource ResourceConveter}, Source=REGRESIDENCETYPE}" />

                            <appCtr:DictionaryComboBox x:Name="cbxRegresidenceType" IsShowNull="False" Category="REGRESIDENCETYPE" Grid.Row="4" Grid.Column="4" Height="24"
SelectedValue="{Binding REGRESIDENCETYPE, Mode=TwoWay}"
                                                 Width="Auto" HorizontalAlignment="Stretch"/>

                            <!--Row 5-->
                            <!--REMARK-->
                            <TextBlock Style="{StaticResource SysTextBlockStyle}"  Grid.Row="5" Grid.Column="0" VerticalAlignment="Top"
                    			Text="{Binding Converter={StaticResource ResourceConveter}, Source=REMARK}" />

                            <TextBox x:Name="txtRemarkEmployeeInfo"  Style="{StaticResource TextBoxStyle}" Grid.Row="5" Grid.Column="1" AcceptsReturn="True" Width="Auto" HorizontalAlignment="Stretch" TextWrapping="Wrap" MaxLength="2000" VerticalScrollBarVisibility="Auto"
                                     Grid.ColumnSpan="4" Text="{Binding REMARK, Mode=TwoWay}" />

                        </Grid>

                    </StackPanel>
                </ScrollViewer>
            </ctr:TabItem>
            <ctr:TabItem Header="{Binding Converter={StaticResource ResourceConveter}, Source=CONTACTWAY}" Style="{StaticResource TabItemStyle}">
                <StackPanel  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="0.3*"/>
                            <ColumnDefinition Width="50"/>

                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="0.3*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>

                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>

                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>

                        </Grid.RowDefinitions>


                        <!--Row 2-->
                        <!--URGENCYCONTACT（“紧急联系方式”改为“紧急联系人电话”）-->
                        <TextBlock   Grid.Row="0" Grid.Column="0"
                    			Text="{Binding Converter={StaticResource ResourceConveter}, Source=URGENCYCONTACT}" />

                        <TextBox Style="{StaticResource TextBoxStyle}" x:Name="txtUrgencyContact"  Grid.Row="0" Grid.Column="1" MaxLength="50"
                    			Text="{Binding URGENCYCONTACT, Mode=TwoWay}" 
                                     HorizontalAlignment="Stretch" Width="Auto"/>


                        <!--URGENCYPERSON-->
                        <TextBlock    Grid.Row="0" Grid.Column="3"
                    			Text="{Binding Converter={StaticResource ResourceConveter}, Source=URGENCYPERSON}" />

                        <TextBox Style="{StaticResource TextBoxStyle}" x:Name="txtUrgencyPerson"   Text="{Binding URGENCYPERSON, Mode=TwoWay}"  MaxLength="50"
                                      Grid.Row="0" Grid.Column="4" HorizontalAlignment="Stretch" Width="Auto" />





                        <!--Row 2-->
                        <!--OFFICEPHONE-->
                        <TextBlock   Grid.Row="1" Grid.Column="0"
            					Text="{Binding Converter={StaticResource ResourceConveter}, Source=OFFICEPHONE}" />

                        <TextBox Style="{StaticResource TextBoxStyle}" x:Name="txtOfficePhone"   Text="{Binding OFFICEPHONE, Mode=TwoWay}"  MaxLength="50"
                                    Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" Width="Auto" />

                        <!--EMAIL-->
                        <TextBlock   Grid.Row="2" Grid.Column="0"
            					Text="{Binding Converter={StaticResource ResourceConveter}, Source=WORKEMAIL}" />

                        <TextBox Style="{StaticResource TextBoxStyle}" x:Name="txtEmail"  Grid.ColumnSpan="4"  Text="{Binding EMAIL, Mode=TwoWay}" MaxLength="50" 
            					 Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch" Width="Auto"/>
                        <dataInput:DescriptionViewer  Target="{Binding ElementName=txtEmail}" 
            					Style="{StaticResource DescriptionViewerTooltipStyle}" HorizontalAlignment="Right" Grid.Row="2" Grid.Column="5"/>

                        <!--RTX-->
                        <TextBlock   Grid.Row="3" Grid.Column="0"
            					Text="{Binding Converter={StaticResource ResourceConveter}, Source=IM}" HorizontalAlignment="Left" />

                        <TextBox Style="{StaticResource TextBoxStyle}" x:Name="txtOtherCommunicate"   Text="{Binding OTHERCOMMUNICATE, Mode=TwoWay}"  MaxLength="50"
                                    Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch" Width="Auto" />
                        <!--Row 2-->
                        <!--MOBILE（“手机”改为“本人手机”）-->
                        <TextBlock   Grid.Row="1" Grid.Column="3" 
            					Text="{Binding Converter={StaticResource ResourceConveter}, Source=MOBILE}" />

                        <TextBox Style="{StaticResource TextBoxStyle}" x:Name="txtMobile"   Text="{Binding MOBILE, Mode=TwoWay}" 
            					  Grid.Row="1" Grid.Column="4" HorizontalAlignment="Stretch" Width="Auto"/>

                        <!--Row 3-->
                        <!--FAMILYADDRESS-->
                        <TextBlock   Grid.Row="4" Grid.Column="0"
                    			Text="{Binding Converter={StaticResource ResourceConveter}, Source=FAMILYADDRESS}" />

                        <TextBox Style="{StaticResource TextBoxStyle}" x:Name="txtFamilyAddress" Grid.Row="4" Grid.Column="1"  Grid.ColumnSpan="4" HorizontalAlignment="Stretch" Width="Auto" MaxLength="100"
                                       Text="{Binding FAMILYADDRESS, Mode=TwoWay}"/>

                        <!--Row 4-->
                        <!--CURRENTADRESS-->
                        <TextBlock   Grid.Row="5" Grid.Column="0"
                    			Text="{Binding Converter={StaticResource ResourceConveter}, Source=CURRENTADRESS}" />

                        <TextBox Style="{StaticResource TextBoxStyle}" x:Name="txtCurrentAddress" Grid.Row="5" Grid.Column="1"  Grid.ColumnSpan="4" HorizontalAlignment="Stretch" Width="Auto" MaxLength="100" 
                                       Text="{Binding CURRENTADDRESS, Mode=TwoWay}" />

                    </Grid>
                </StackPanel>
            </ctr:TabItem>
            <!--异动记录-->
            <ctr:TabItem Header="{Binding Converter={StaticResource ResourceConveter}, Source=POST}" Style="{StaticResource TabItemStyle}">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="10"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="tbFirstRowTitle" Grid.Row="0"  Text="{Binding Converter={StaticResource ResourceConveter}, Source=POST}" Style="{StaticResource HeaderTextStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,4,0,4"/>
                    <Border Height="1" BorderBrush="#FF6D8193" BorderThickness="1" Grid.Row="1"  HorizontalAlignment="Stretch" Width="Auto" VerticalAlignment="Bottom" Margin="5,0,5,2"  />
                    <data:DataGrid x:Name="DtPostGrid" AutoGenerateColumns="False" Grid.Row="2"    Margin="5,0,0,0"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsEnabled="True" Style="{StaticResource DataGridStyle}" VerticalScrollBarVisibility="Visible" 
                        CellStyle="{StaticResource DataGridCellStyle}" RowStyle="{StaticResource DataGridRowStyle}" RowHeaderStyle="{StaticResource DataGridRowHeaderStyle}" ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}">
                        <data:DataGrid.Columns>
                            <data:DataGridTemplateColumn HeaderStyle="{StaticResource DataGridCheckBoxColumnHeaderStyle}">
                                <data:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>

                                    </DataTemplate>
                                </data:DataGridTemplateColumn.CellTemplate>
                            </data:DataGridTemplateColumn>
                            <data:DataGridTextColumn Header="CNAME" Binding="{Binding T_HR_POST.T_HR_DEPARTMENT.T_HR_COMPANY.CNAME}"/>
                            <data:DataGridTextColumn Header="DEPARTMENTNAME" Binding="{Binding T_HR_POST.T_HR_DEPARTMENT.T_HR_DEPARTMENTDICTIONARY.DEPARTMENTNAME}" />
                            <data:DataGridTextColumn Header="POSTNAME" Binding="{Binding T_HR_POST.T_HR_POSTDICTIONARY.POSTNAME}"/>
