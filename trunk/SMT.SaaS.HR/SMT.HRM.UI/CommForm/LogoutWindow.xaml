<basics:ChildWindow
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:basics="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Class="SMT.HRM.UI.LogoutWindow"
	Title="注销" mc:Ignorable="d" FontSize="14.667" Height="120" Width="250">
	<Grid x:Name="LayoutRoot" Background="White">
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<TextBlock Grid.Row="0" Text="你确定退出本系统吗？" Margin="0,0,0,0" HorizontalAlignment="center" d:LayoutOverrides="Width, Height" VerticalAlignment="center" FontSize="16"/>

		<Button x:Name="OKButton" Content="是" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Grid.Row="1" Margin="0,0,27,0" />
		<Button x:Name="CancelButton" Content="否" Click="CancelButton_Click" Height="23"  Margin="27,0,0,0" Grid.Row="1" HorizontalAlignment="Left" Width="75" />
	</Grid>
</basics:ChildWindow>